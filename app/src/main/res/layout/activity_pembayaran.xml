<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ActivityPembayaran">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/adminlogo"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembayaran"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/logo"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="25dp"/>

        <Spinner
            android:id="@+id/namasiswa"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Nama"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>
        <Spinner
            android:id="@+id/tanggalbyr"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Tanggal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/namasiswa"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/jumlahbyr"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Jumlah"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tanggalbyr"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/buttonsbayar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Submit"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonsubmit"
            android:layout_below="@+id/jumlahbyr"
            android:layout_marginTop="20dp"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>